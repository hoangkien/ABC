
<div class="top_in_center">
  <div class="search_form">
    <%= form_tag travellers_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search], :placeholder => "type search key" %>
          <%= submit_tag "Search",class:'btn_small_blue', :name => nil %>
        </p>
    <% end %>

  </div>
          <div class="action_button">
        <%= button_to 'New traveller', new_traveller_path, method: 'get', class:'btn_medium_blue' %>
                </div>
</div>
      <div class="cl"></div>
     <% if notice %>
      <p class="msgBlue"><%= notice %></p>
      <% end    %>

    <table width="100%" class="tblList">
      <tr>
        <th width="10%">Name </th>
        <th width="15%">Address</th>
        <th width="20%">Phone</th>
        <th width="10%">Device Name</th>
        <th width="5%">Gender</th>
        <th width="15%">Email</th>
        <th width="10%">Action</th>
      </tr>
      <% @travellers.each do |traveller| %>
          <tr>
            <td><%= traveller.name %></td>
            <td><%= traveller.address %></td>
            <td><%= traveller.phone%></td>
            <td><%= traveller.device_id %></td>
            <td><%= traveller.gender == 0 ? "Male" : "Female"%></td>
            <td><%= traveller.email%></td>
            <td><%= link_to image_tag('templates/view_icon.ico',size:"16x16") ,traveller %>
            <%= link_to image_tag('templates/edit.png') ,edit_traveller_path(traveller) %>
            <%= link_to image_tag('templates/Delete.png'), traveller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </table>
      <!--table end-->
      <br><div class="paginate"> <%= paginate @travellers %> </div>

