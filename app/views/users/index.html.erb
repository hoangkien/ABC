
<div class="top_in_center">
  <div class="search_form">
    <%= form_tag users_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search], :placeholder => "type search key" %>
          <%= submit_tag "Search",class:'btn_small_blue', :name => nil %>
        </p>
    <% end %>

  </div>
          <div class="action_button">
        <%= button_to 'New User', new_user_path, method: 'get', class:'btn_small_blue' %>
                </div>
</div>
      <div class="cl"></div>
     <% if notice %>
      <p class="msgBlue"><%= notice %></p>
      <% end    %>

    <table width="100%" class="tblList">
      <tr>
        <th width="10%">Account </th>
        <th width="15%">User name</th>
        <th width="20%">Address</th>
        <th width="10%">Group</th>
        <th width="15%">Company</th>
        <th width="10%">Created at</th>
        <th width="10%">Updated at</th>
        <th width="10%">Action</th>
      </tr>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.account %></td>
            <td><%= user.name %></td>
            <td><%= truncate(strip_tags(user.address),length: 80)%></td>
            <td><%= user.group %></td>
            <td><% if  user.company == nil %>
                      No company
                  <% else %>
                      <%= user.company.name  %>
                  <% end %>
            </td>
            <td><%= user.created_at.strftime("%d/%m/%Y") if not user.created_at == nil %></td>
            <td><%= user.updated_at.strftime("%d/%m/%Y") if not user.updated_at == nil %></td>
            <td><%= link_to image_tag('templates/view_icon.ico') ,user %>
            <%= link_to image_tag('templates/edit.png') ,edit_user_path(user) %>
            <%= link_to image_tag('templates/Delete.png'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </table>
      <!--table end-->
      <br><div class="paginate"> <%= paginate @users %> </div>

