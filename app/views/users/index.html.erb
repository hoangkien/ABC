<p id="notice"><%= notice %></p>
<div class="top_in_center">
  <%= button_to 'New User', new_user_path, method: 'get', class:'btn_small_blue' %>
</div>



<table width="100%" class="tblList">
  <tr>
    <th width="10%">Account </th>
    <th width="20%">Name</th>
    <th width="20%">Address</th>
    <th width="20%">Group</th>
    <th width="30%">Action</th>
  </tr>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.account %></td>
        <td><%= user.name %></td>
        <td><%= user.address %></td>
        <td><%= user.group %></td>
        <td><%= link_to 'Show', user %>
        <%= link_to image_tag('templates/edit.png') ,edit_user_path(user) %>
        <%= link_to image_tag('templates/Delete.png'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>

</table>
</table>
<!--table end-->
