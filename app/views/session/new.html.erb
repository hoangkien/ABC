<div style="border: 1px solid #929191; display: inline-block; padding:10px;border-radius: 4px;">
    <%= form_for(@user) do |f| %>
    <table width="40%" class="signin_form">
      <tr>
        <th width="30%">  <%= f.label :name %></th>
        <td width="70%"> <%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :password %></th>
        <td><%= f.password_field :password %></td>
      </tr>

      <tr>
        <th></th>
        <td><%= f.submit 'Sign In'%></td>
      </tr>
    </table>
    <% end %>
</div>